    "version": "0.2.0",
    "configurations": [
        {
                "type": "lldb",
                "request": "launch",
                "name": "Debug rust",
                "cargo": {
                    "args": [
                        "build",
                    ],
                },
                "args": ["${input:file}"],
                "cwd": "${workspaceFolder}"
            },
    ],
    "inputs": [
        {
            "id": "file",
            "type": "promptString",
            "description": "lox file to run",
        }
    ]
}